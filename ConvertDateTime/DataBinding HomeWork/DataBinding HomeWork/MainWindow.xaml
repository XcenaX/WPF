<Window x:Class="DataBinding_HomeWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding_HomeWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Переконвертировать" Width="120" Height="22"/>
            <TextBox Name="dateText" Width="200" Height="22"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Name="convertButton" Content="В DateTime" Width="90" Height="22" Margin="10" Click="ConvertData"/>
                <Button Name="convertBackButton" Content="Из DateTime" Width="90" Height="22" Click="ConvertBack"/>
            </StackPanel>
            <TextBlock Name="convertedBlock" Text="Переконвертированное значение" Width="200" Height="22"/>
        </StackPanel>
    </Grid>
</Window>
